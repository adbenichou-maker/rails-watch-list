<div class="container">
  <h1>My List: <b><%= @list.name %></b></h1>
  <br>
  <div>
  <% @bookmarks.each do |bookmark| %>
  <p><%= bookmark.movie.title %></p>
  <p><%= bookmark.comment %></p>
  <p><%= link_to "Delete Bookmark",
          "/lists/#{params[:id]}/bookmarks/#{bookmark.id}",
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
        %></p>
  <% end %>
  </div>
<div>
  <p><%= link_to '+ Add a new Bookmark', "/lists/#{params[:id]}/bookmarks/new" %></p>
</div>


</div>
